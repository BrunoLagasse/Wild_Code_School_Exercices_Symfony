{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Saison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('season/_delete_form.html.twig') }}
    
    <br>

    <a href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>

    <br>

    <a href="{{ path('season_index') }}">Retourner à la liste des saisons</a>
{% endblock %}
